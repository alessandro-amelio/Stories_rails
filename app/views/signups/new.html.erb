<div class="contact-main">
	<img alt="Open" class="icon-menu" src="https://stories-rails.herokuapp.com/assets/open-9688b19dacd0cc7d027490776ace74ff.svg" width="24px">
	<div class="content container">
		<h1>Get the latest updates from Stories</h1>
		<div class="row">
			<div class="col-md-4 col-md-4-offset"></div>
			<div class="col-md-4">
        
        <%= form_for(@signup) do |f| %>
        	<div class="form-group">
						<label>First name</label>
            <%= f.text_field :firstname, :class => "form-control" %>
					</div>
					<div class="form-group">
						<label>Email</label>
            <%= f.text_field :email, :class => "form-control" %>
					</div>
            <%= f.submit "Join", class: "btn btn-default" %>
        <% end %>    
          
			</div>
		</div>
		<div class="col-md-4 col-md-4-offset"></div>
	</div>
</div>